# 数据库配置
DATABASE_URL="mysql://username:password@localhost:3306/kaoyan_checkin"

# JWT配置
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="7d"

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
MAIL_FROM="noreply@kaoyan-checkin.com"

# 服务器配置
PORT=3001
NODE_ENV="development"

# 文件上传配置
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=5242880

# 跨域配置（部署生产环境时，修改为前端域名或IP，多个源用逗号分隔）
CORS_ORIGIN="http://localhost:3000"
# CORS_ORIGIN="http://your-frontend-domain.com,http://your-server-ip:3000"

# API和Socket地址（用于前端配置）
API_URL="http://localhost:3001/api"
SOCKET_URL="http://localhost:3001"

# Redis配置（可选，用于缓存）
REDIS_URL="redis://localhost:6379"

# 微信小程序配置（可选）
WECHAT_APPID=""
WECHAT_SECRET=""

# 管理员配置
ADMIN_EMAIL="admin@example.com" 